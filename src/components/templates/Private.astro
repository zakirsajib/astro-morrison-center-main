---
const { privatedata } = Astro.props;

---

<style is:inline>
    @media (min-width: 992px) {
        .private-hero img,
        .private-second img {
            max-width: 50%;
        }
    }
    img.alignright { float: right; margin: 1em 0 1em 2em; }
    img.alignleft { float: left; margin: 1em 2em 1em 0; }
    
    .private-hero a,
    .private-second a,
    .private-faq .accordion-body a,
    .private-fifth a {
        border-bottom: 2px solid #009345;
    }
    .private-fifth .card {
        background: linear-gradient(to bottom, #ffffff, #eeeded);
        background: -webkit-linear-gradient(top, #ffffff, #eeeded);
        background: -moz-linear-gradient(top, #ffffff, #eeeded);
        background: -ms-linear-gradient(top, #ffffff, #eeeded);
        background: -o-linear-gradient(top, #ffffff, #eeeded);
        padding: 30px 50px;
        border-radius: 30px;
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.15);
        margin-bottom: 20px;
        transition: all 0.3s ease-in-out;
    }
    .private-fifth ul {
        list-style-position: outside;
    }

    .private-fifth ul li ul {
        margin-left: 20px;
        margin-top: 10px;
    }
    .private-fifth ul li {
        list-style-type: disc;
        padding-bottom: 10px;
    }
</style>


<section class="private-hero pb-5 mt-md read-aloud">
    <div class="container ps-5 pe-5">
      <div class="row">
        <div class="col-lg-12 col-sm-12 d-flex flex-column align-items-start justify-content-center">
            <div class="pe-6 text-black" set:html={privatedata.acf.hero_contents} />
        </div>
      </div>
    </div>
</section>

<section class="private-second pb-5 mt-sm read-aloud">
    <div class="container ps-5 pe-5">
      <div class="row">
        <div class="col-lg-12 col-sm-12 d-flex flex-column align-items-start justify-content-center">
            <div class="pe-6 text-black" set:html={privatedata.acf.second_section_contents} />
        </div>
      </div>
    </div>
</section>

<section class="private-faq pb-5 mt-sm read-aloud">
    <div class="container ps-5 pe-5">
        <div class="row">
            <div class="col-12 pb-2">
            
                <h2 set:html={privatedata.acf.faq_titleheading} />

                <div class="accordion" id="accordionExample">
                {privatedata.acf.faq_items.map((faqItems, index) => (
                    
                    <div class="accordion-item" key={index}>
                        <h3 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target={`#collapse${index}`} aria-expanded="true" aria-controls={`#collapse${index}`}
                                set:html={faqItems.faq_title} />
                        </h3>
                        <div id={`collapse${index}`} class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <p set:html={faqItems.faq_descriptions} />
                            </div>
                        </div>
                    </div>
                ))}
                </div>

            </div>
        </div>
    </div>
</section>

<section class="private-fifth pb-5 mt-sm read-aloud">
    <div class="container ps-5 pe-5">
        <div class="row py-1">
            {privatedata.acf.florida_homeschool_programs_descriptions && (
                <div set:html={privatedata.acf.florida_homeschool_programs_descriptions} />
            )}
        </div>
    </div>    
</section>