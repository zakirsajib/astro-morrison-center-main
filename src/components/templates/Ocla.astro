                        <div class="location-info flex-grow-1 ms-3">
                            {locationItem.details && (
                                <div set:html={locationItem.details} />
                            )}
                        </div>
                    </div> 
                    ))}
               </div> 
             
            </div>
            <div class="col-lg-8 col-sm-12 d-flex flex-column ps-0 ps-lg-5">
                
                {ocladata.acf.section_headingtitle && (
                    <div 
                        class="loc-general-info pt-3" 
                        set:html={ocladata.acf.section_headingtitle} 
                    />
                )}

                 {/** Carousel */}   
                 
                 {ocladata.acf.location_gallery && (
                 <div class="swiper gallerySwiper">
                    <div class="swiper-wrapper" id="lg-swipper">
                    {ocladata.acf.location_gallery && ocladata.acf.location_gallery.map((galleryItem, index) => (
                        
                            <a
                                data-lg-size="1008-756"
                                href={galleryItem.gallery_image.url}
                                class="swiper-slide"
                                key={index}
                            >
                            <img 
                                src={galleryItem.gallery_image.sizes['medium']} 
                                alt={galleryItem.gallery_image.alt}
                                width={galleryItem.gallery_image.sizes['medium-width']}
                                height={galleryItem.gallery_image.sizes['medium-height']}
                            />
                            </a>
                        
                    ))}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
                )}
                
                {ocladata.acf.location_contents && (
                    <div 
                        class="loc-general-info pt-3" 
                        set:html={ocladata.acf.location_contents} 
                    />
                )}
                
                {ocladata.acf.multiple_column === 'Yes' ? (
                <div class="row py-1">
                    <div class="col-12 col-lg-5 featList">
                        <ul class="list-group">
                            {ocladata.acf.featured_list && ocladata.acf.featured_list.map((featuredItem, index) => (
                                <li key={index}
                                class="list-group-item">
                                 {featuredItem.featured_item} </li>
                            ))}
                        </ul>
                    </div>
                    <div class="col-12 col-lg-7 featList">
		                <ul class="list-group">
                            {ocladata.acf.featured_list_2 && ocladata.acf.featured_list_2.map((featuredItem2, index) => (
                                <li key={index}
                                class="list-group-item">
                                 {featuredItem2.featured_item} </li>
                            ))}
                        </ul>
                    </div>
                </div>

                ) : (
                <div class="row py-1">
                    <div class="col-12 featList">
                        <ul class="list-group">
                            {ocladata.acf.featured_list && ocladata.acf.featured_list.map((featuredItem, index) => (
                                <li key={index}
                                class="list-group-item">
                                 {featuredItem.featured_item} </li>
                            ))}
                        </ul>
                    </div>
                </div>

                )}

