<section class="ocla-hero mt-md">
    <div class="container px-5">
        <div class="row">
            <div class="col-lg-4 col-sm-12 d-flex flex-column align-items-start justify-content-start pe-0 pe-lg-5 contact-info">
                <div class="sticky-top sidebar">
                    <h2 class="mb-0 pt-3" set:html={ocladata.title.rendered} />
                    {ocladata.acf.location_details && ocladata.acf.location_details.map((locationItem, index) => (
                    <div class="d-flex" key={index}>  
                        <div class="flex-shrink-0">
                            <img 
                                src={locationItem.location_icon} 
                                alt={ocladata.title.rendered} 
                            />
